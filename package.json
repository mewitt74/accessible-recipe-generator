{
  "name": "accessible-recipe-generator",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "scrape": "node ./scripts/importer.mjs",
    "test": "vitest",
    "start:server": "node ./server/index.mjs",
    "dev:full": "concurrently \"npm run dev\" \"npm run start:server\"",
    "start": "concurrently \"npm run start:server\" \"npm run dev\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "cheerio": "^1.0.0-rc.12",
    "express": "^4.18.2",
    "concurrently": "^8.2.0",
    "cross-fetch": "^3.1.8"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "^1.1.5",
    "puppeteer": "^21.4.1"
  }
}